    let currentSortColumn = null;
    let sortDirection = 'asc';

    const columns = [
        'appName', 'supplier', 'supportFunction', 'lrcOwned', 'description', 'ai', 'url', 'dataAnalytics', 'okta', 'access', 'lrcOwner', 'techOwner', 'costCenter', 'annualSpend', 'userCount', 'notes'
