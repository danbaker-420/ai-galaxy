    <script>
        // --- Tab Management Logic ---
        let activeTab = 'adventure-1';

        /**
         * Switches the active adventure tab and updates styling.
         * @param {string} tabId - The ID of the adventure tab to switch to (e.g., 'adventure-1').
         */
        function switchTab(tabId) {
            activeTab = tabId;

            // 1. Hide all tab content panes
            document.querySelectorAll('.tab-pane').forEach(pane => {
                pane.classList.add('hidden');
            });

            // 2. Show the selected tab content
            const targetPane = document.getElementById(tabId);
            if (targetPane) {
                targetPane.classList.remove('hidden');
            }

            // 3. Update active button styling
            document.querySelectorAll('#tab-nav button').forEach(button => {
                // Remove all color classes for a clean slate before applying new ones
                button.classList.remove('bg-blue-600', 'text-white', 'shadow-md', 'text-black', 'bg-[#ff5200]', 'hover:bg-[#ff5200]', 'hover:text-black', 'bg-gray-200', 'text-gray-600', 'hover:bg-gray-300');

                if (button.id === `btn-${tabId}`) {
                    // ACTIVE STYLE (Custom Orange BG, Black Text)
                    button.classList.add('bg-[#ff5200]', 'text-black', 'shadow-md');
                } else {
                    // INACTIVE STYLE (Gray BG, Gray Text, Hover Custom Orange)
                    button.classList.add('bg-gray-200', 'text-gray-600', 'hover:bg-[#ff5200]', 'hover:text-black');
                }
            });

            // 4. Special calls for canvas redrawing on tab switch
            if (tabId === 'adventure-1') {
                // Delay draw to ensure the canvas element has rendered in the DOM
                setTimeout(drawMap, 50);
            } else if (tabId === 'adventure-2') {
                // Call the galaxy's initialization logic when this tab opens
                setTimeout(() => {
                    galaxyInitStaticElements(); // Initialize DOM elements for galaxy
                    recalculateGalaxy();        // Draw the visualization
                }, 50);
            }
        }
        
        // --- Map Simulation Logic (Adventure 1: Prompt Enhancements) ---

        // Global variables for the Map
        const canvas = document.getElementById('mapCanvas');
        const ctx = canvas.getContext('2d');
        const startIconUrl = "https://cdn-icons-png.flaticon.com/512/602/602232.png";

        let startIcon = new Image();
        let imagesLoadedCount = 0;
        const totalImagesToLoad = 1; // Only loading the start icon now.

        function imageLoaded() {
            imagesLoadedCount++;
            if (imagesLoadedCount === totalImagesToLoad) {
                drawMap();
            }
        }

        startIcon.onload = imageLoaded;
        startIcon.onerror = () => { console.error("Failed to load starting icon image. Using fallback circle."); imageLoaded(); };
        startIcon.src = startIconUrl;
        
        let currentSegment = 0;
        const totalStops = 4;

        // Define the 4 stops (original coordinates/names)
        const stops = [
            { x: 100, y: 400, name: "Stop 1: Initial Prompt", color: '#EF4444' },
            { x: 450, y: 100, name: "Stop 2: Harvey.ai", color: '#F59E0B' }, // Now a simple circle marker
            { x: 700, y: 250, name: "Stop 3: Gemini 2.5 Pro", color: '#10B981' },
            { x: 300, y: 450, name: "Stop 4: Final Output", color: '#6366F1' }
        ];

        // --- UPDATED CITY BACKGROUND LOGIC (New Custom Palette) ---
        function drawBackground() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = '#f9fafb'; // Light base
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Draw wide vertical road (Gray 200)
            ctx.fillStyle = '#e5e7eb';
            ctx.fillRect(350, 0, 100, 500);
            
            // Draw horizontal road (Gray 200)
            ctx.fillRect(0, 200, 800, 100);

            // Draw "City Blocks" (Custom colors)
            // Bottom-Left (HEX#ece0d6)
            ctx.fillStyle = '#ece0d6';
            ctx.fillRect(50, 320, 280, 150);
            
            // Top-Left (HEX#cec4a1)
            ctx.fillStyle = '#cec4a1';
            ctx.fillRect(50, 30, 280, 150);

            // Top-Right (HEX#566578)
            ctx.fillStyle = '#566578';
            ctx.fillRect(470, 30, 280, 150);
            
            // Bottom-Right (HEX#8d6e5b)
            ctx.fillStyle = '#8d6e5b';
            ctx.fillRect(470, 320, 280, 150);


            // Draw a simple border
            ctx.strokeStyle = '#9ca3af';
            ctx.lineWidth = 2;
            ctx.strokeRect(0, 0, canvas.width, canvas.height);
        }
        // --- END UPDATED CITY BACKGROUND LOGIC ---

        function updateStatusText() {
            const statusEl = document.getElementById('currentStatusText');
            const nextStopBtn = document.getElementById('nextStopBtn');
            const resetBtn = document.getElementById('resetBtn');

            resetBtn.disabled = currentSegment === 0;

            if (currentSegment === 0) {
                statusEl.textContent = "Ready to start the route to " + stops[1].name + ".";
                nextStopBtn.textContent = "Next Stop";
                nextStopBtn.disabled = false;
            } else if (currentSegment < totalStops - 1) {
                statusEl.textContent = `En route to ${stops[currentSegment + 1].name} (${currentSegment} of 3 segments complete).`;
                nextStopBtn.textContent = "Next Stop";
                nextStopBtn.disabled = false;
            } else {
                statusEl.textContent = `Route Complete! All 4 stops visited.`;
                nextStopBtn.textContent = "Route Complete";
                nextStopBtn.disabled = true;
            }
        }
        
        
        function drawRoute() {
            ctx.lineWidth = 8;
            ctx.lineCap = 'round';

            for (let i = 0; i < stops.length - 1; i++) {
                const start = stops[i];
                const end = stops[i + 1];

                ctx.beginPath();
                ctx.moveTo(start.x, start.y);
                ctx.lineTo(end.x, end.y);

                if (i + 1 <= currentSegment) {
                    ctx.strokeStyle = '#ff5200';
                    ctx.setLineDash([]);
                } else {
                    ctx.strokeStyle = '#9ca3af';
                    ctx.setLineDash([10, 10]);
                }
                ctx.stroke();
            }
            ctx.setLineDash([]);
        }

        function drawMarkers() {
            const markerSize = 90; // For the initial building icon
            const fallbackRadius = 23;
            const otherMarkerRadius = 15; // For generic circle markers

            stops.forEach((stop, index) => {
                
                if (index === 0) { // Stop 1: Initial Prompt (Building Icon) - UNIQUE
                    if (startIcon.complete && startIcon.src) {
                        ctx.drawImage(startIcon, stop.x - markerSize / 2, stop.y - markerSize, markerSize, markerSize);
                        ctx.fillStyle = '#1f2937';
                        ctx.font = '600 12px Inter';
                        ctx.textAlign = 'center';
                        ctx.textBaseline = 'top';
                        ctx.fillText("START", stop.x, stop.y + 10);
                    } else {
                        // Fallback logic for start icon
                        ctx.fillStyle = stop.color;
                        ctx.beginPath();
                        ctx.arc(stop.x, stop.y, fallbackRadius, 0, Math.PI * 2);
                        ctx.fill();
                        ctx.fillStyle = '#1f2937';
                        ctx.font = '600 12px Inter';
                        ctx.textAlign = 'center';
                        ctx.textBaseline = 'middle';
                        ctx.fillText("1", stop.x, stop.y);
                    }
                } else { // Stops 2, 3, and 4 (Generic Circles) - UNIFIED
                    const isVisited = index <= currentSegment;
                    
                    // Draw the circle background
                    ctx.fillStyle = isVisited ? stop.color : '#6b7280';
                    ctx.beginPath();
                    ctx.arc(stop.x, stop.y, otherMarkerRadius, 0, Math.PI * 2);
                    ctx.fill();

                    // Draw the number inside the circle for better contrast
                    ctx.fillStyle = 'white';
                    ctx.font = '600 14px Inter';
                    ctx.textAlign = 'center';
                    ctx.textBaseline = 'middle';
                    ctx.fillText(index + 1, stop.x, stop.y);
                    
                    // Draw the name below the circle
                    ctx.fillStyle = '#1f2937';
                    ctx.font = '400 12px Inter';
                    ctx.textAlign = 'center';
                    ctx.textBaseline = 'top';
                    // Display only the stop name (e.g., "Harvey.ai")
                    const stopName = stop.name.split(': ')[1] || stop.name;
                    ctx.fillText(stopName, stop.x, stop.y + otherMarkerRadius + 5);
                }
            });
            ctx.textBaseline = 'alphabetic'; // Reset text baseline
        }
        
        function drawMap() {
            drawBackground();
            drawRoute();
            drawMarkers();
            populateStopList();
            updateStatusText();
        }

        function nextStop() {
            if (currentSegment < totalStops - 1) {
                currentSegment++;
                drawMap();
            }
        }

        function resetMap() {
            currentSegment = 0;
            drawMap();
        }

        function populateStopList() {
            const listEl = document.getElementById('stopList');
            if (!listEl) return;

            listEl.innerHTML = stops.map((stop, index) => {
                const status = index === 0 ? 'Start' : index === totalStops - 1 ? 'End' : `Stop ${index + 1}`;
                const name = stop.name.split(': ')[1] || stop.name;
                return `
                    <li class="flex items-center">
                        <span style="background-color: ${stop.color};" class="inline-block w-3 h-3 rounded-full mr-2"></span>
                        ${status}: ${name}
                    </li>
                `;
            }).join('');
        }

        // --- END MAP SIMULATION LOGIC ---


